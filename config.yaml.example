# Natural Language SQL Interface Configuration
# Copy this file to config.yaml and update with your actual values

# Database Configuration
# Configure your PostgreSQL database connection details
database:
  host: localhost                    # PostgreSQL server hostname or IP address
  port: 5432                        # PostgreSQL server port (default: 5432)
  username: your_db_username        # Database username
  password: your_db_password        # Database password
  database: your_database_name      # Database name to connect to
  schema: public                    # Schema to query (usually 'public')

# Google Gemini Pro API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
gemini:
  api_key: your_gemini_api_key_here  # Your Google Gemini Pro API key

# Rate Limiting Configuration (optional - defaults shown)
# Controls how many API requests can be made to prevent abuse
rate_limit:
  max_requests: 60      # Maximum requests per time window
  window_seconds: 60    # Time window in seconds (60 = 1 minute)
  burst_limit: 10       # Maximum burst requests in short time (5 seconds)

# Application Configuration
# Controls how the Flask web server runs
app:
  host: 0.0.0.0         # Host to bind to (0.0.0.0 = all interfaces)
  port: 5000            # Port to run the web server on
  debug: false          # Enable debug mode (set to true for development)
  secret_key: your-secret-key-here  # Flask secret key (change this!)

# Example configurations for different environments:

# Development Configuration:
# app:
#   host: 127.0.0.1
#   port: 5000
#   debug: true
#   secret_key: dev-secret-key

# Production Configuration:
# app:
#   host: 0.0.0.0
#   port: 8080
#   debug: false
#   secret_key: your-secure-production-secret-key

# High-volume Production Rate Limiting:
# rate_limit:
#   max_requests: 300
#   window_seconds: 60
#   burst_limit: 50